@using CodeProject.ViewModels
@model CreateEmployeeViewModel
@{
    Layout = Layout;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateEmployee</title>
    <script src="~/Scripts/Validations.js"></script>
    <script>
        function ResetForm() {
            document.getElementById('TxtFName').value = "";
            document.getElementById('TxtLName').value = "";
            document.getElementById('TxtSalary').value = "";
        }
    </script>
</head>
<body>
    <div>
        <form class="form-horizontal" action="/Employee/SaveEmployee" method="post">
            First Name: <input class="form-control" type="text" id="TxtFName" name="FirstName" value="@Model.FirstName" />@Html.ValidationMessage("FirstName", new { @class = "text-danger", @style = "margin-left:5px" })<br />
            Last Name: <input class="form-control" type="text" id="TxtLName" name="LastName" value="@Model.LastName" />@Html.ValidationMessage("LastName", new { @class = "text-danger", @style = "margin-left:5px" })<br />
            Salary: <input class="form-control" type="text" id="TxtSalary" name="Salary" value="@Model.Salary" />@Html.ValidationMessage("Salary", new { @class = "text-danger", @style = "margin-left:5px" })<br />
            <input class="btn btn-success" type="submit" name="BtnSubmit" value="Save Employee" onclick="return IsValid()"/>
            <input class="btn btn-warning" type="reset" name="BtnReset" value="Reset" />
            <input class="btn btn-default" type="submit" name="BtnSubmit" value="Cancel" />
        </form> 
    </div>
</body>
</html>
