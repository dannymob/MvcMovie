@using CodeProject.ViewModel   
@model EmployeeListViewModel

@{
    Layout = Layout;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyView</title>
</head>
<body>
    <div> 
        <div>
            <a id="addNew" class="btn btn-primary" href="/Employee/AddNew" role="button">Add New</a>
            <table class="table table-hover">
                <tr>
                    <th>Employee Name</th>
                    <th>Salary</th>
                </tr>
                @foreach (EmployeeViewModel item in Model.Employees)
                {
                    <tr class="@item.SalaryColor">
                        <td>@item.EmployeeName</td>
                        <td>@item.Salary</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>
